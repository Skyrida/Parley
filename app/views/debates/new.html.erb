<div class="main-banner">
  <h2>Start a debate</h2>
  <p style="color:white">open our mind</p>
</div>
<div class="main-container-block">
  <div data-controller="tweet">
    <%= simple_form_for @debate do |f| %>
      <%= f.input :title, label: false, placeholder: 'Title', input_html: { "data-tweet-target": "titleContent", "data-action": "keyup->tweet#change" }, as: :text %>
      <p data-tweet-target="titleOutput" class="counter-text"></p>
      <%= f.input :description, label: false, placeholder: 'Description', input_html: { "data-tweet-target": "descriptionContent", "data-action": "keyup->tweet#change" }, as: :text %>
      <p data-tweet-target="descriptionOutput" class="counter-text"></p>
      <%= f.input :tag_list, label: false, placeholder: 'Tag 1, Tag 2' %>
      <div class="form-actions", style="justify-content:center; display:flex">
        <%= f.button :submit, "Create debate", class: "button-primary" %>
      </div>
    <% end %>
  </div>
</div>
